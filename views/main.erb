<% target = @account.targets[0] %>
<div class="target-card">
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img class="responsive-img" src="http://i.telegraph.co.uk/multimedia/archive/02096/puerto_2096109b.jpg">
        </div>
        <div class="card-content">
        <div class="progress">
          <div class="determinate" style="width: <%= @account.target_percentage(target) %>%"></div>
          </div>
          <p><%= @account.target_percentage(target) %>%</p>
          <p>£<%= @account.target_progress %>/£<%= target.amount %></p>
          <p><%= target.days_left %> days left</p>
        </div>
      </div>
    </div>
  </div>
</div>